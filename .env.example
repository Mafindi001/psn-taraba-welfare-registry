# Application Configuration
NODE_ENV=development
PORT=5000
APP_NAME=PSN Taraba Welfare Registry

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/psn_welfare?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=PSN Taraba Welfare <noreply@psntaraba.org>

# Admin Configuration
ADMIN_EMAIL=welfare@psntaraba.org
ADMIN_DEFAULT_PASSWORD=ChangeThisPassword123!

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Reminder Configuration
REMINDER_CRON_SCHEDULE=0 9 * * *
REMINDER_HOURS_BEFORE=24

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000